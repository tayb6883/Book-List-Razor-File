@page
@model BookListRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">
            Book List
        </h2>
    </div>

    <div class="col-3 ">
        <a asp-page="Create" class="form-control btn btn-info text-white">Create New Book</a>
    </div>

</div>

<div class="col-12 col-md-12  col-sm-12 border p-3 mt-3">
    <form action="/" method="post">
        @if (Model.Books.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Books.FirstOrDefault().Name"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Author"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().ISBN"></label>
                    </th>
                    <th>
                        <label>Action</label>
                    </th>
                </tr>
                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ISBN)
                        </td>
                        <td>
                            <button class="btn btn-sm btn-danger"> Delete</button>
                            <a href="#" class="btn btn-sm btn-success text-white">Edit</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Book available</p>
        }
    </form>
</div>

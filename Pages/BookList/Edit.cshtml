@page
@model BookListRazor.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}


<br />
<h2 class="text-info">Edit Book</h2>
<div class="container border" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Book.Id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Book.Name" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"> </span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Book.Author" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"> </span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Book.ISBN" />
            </div>
            <span class="text-danger" asp-validation-for="Book.ISBN"> </span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" name="Craete" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class=" col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>

@*//for client side validation
    user wont go to client side if validation is applied via asp tag helper as below*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}